    case 40:
      //Pin mappings as per the NO2C shield
      pinInjector1 = 8; //Output pin injector 1 is on
      pinInjector2 = 9; //Output pin injector 2 is on
      pinInjector3 = 10; //Placeholder only - NOT USED
      pinInjector4 = 11; //Placeholder only - NOT USED
      pinInjector5 = 12; //Placeholder only - NOT USED
      pinCoil1 = 23; //Pin for coil 1
      pinCoil2 = 22; //Pin for coil 2
      pinCoil3 = 40; //Placeholder only - NOT USED
      pinCoil4 = 36; //Placeholder only - NOT USED
      pinCoil5 = 34; //Placeholder only - NOT USED
      pinTrigger = 19; //The CAS pin
      pinTrigger2 = 18; //The Cam Sensor pin
      pinTPS = A2;//TPS input pin
      pinMAP = A3; //MAP sensor pin
      pinIAT = A0; //IAT sensor pin
      pinCLT = A1; //CLS sensor pin
      pinO2 = A8; //O2 Sensor pin
      pinBat = A4; //Battery reference voltage pin
      pinDisplayReset = 48; // OLED reset pin - NOT USED
      pinTachOut = 38; //Tacho output pin
      pinIdle1 = 5; //Single wire idle control
      pinIdle2 = 53; //2 wire idle control - NOT USED
      pinBoost = 7; //Boost control
      pinVVT_1 = 3; //Default VVT output - NOT USED
      pinFuelPump = 4; //Fuel pump output
      pinStepperDir = 26; //Direction pin  for DRV8825 driver
      pinStepperStep = 24; //Step pin for DRV8825 driver
      pinStepperEnable = 27; //Enable pin for DRV8825
      pinFan = 6; //Pin for the fan output
      pinLaunch = 12; //Can be overwritten below - NOT USED
      pinFlex = 2; // Flex sensor (Must be external interrupt enabled) - NOT USED
      break;